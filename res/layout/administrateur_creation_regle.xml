<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#FF5E3A"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/admin_crea_regle_titre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="@string/administrateur_creation_regle_titre_texte"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/admin_crea_regle_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:onClick="creerRegle"
            android:text="@string/bout_ok_txt"
            android:textColor="@drawable/button_color_selector" 
            android:textSize="18sp" />
    </RelativeLayout>
    
    <Spinner
        android:id="@+id/admin_creation_regle_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:prompt="@string/crea_regle_type" />

    <Spinner
        android:id="@+id/admin_creation_regle_op_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:prompt="@string/crea_regle_operateur" />
    
    <TextView
        android:id="@+id/admin_creation_regle_txt_choix"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:text="@string/admin_creation_regle_sapplique_sur"
        android:textColor="#000000" />
    
    <Spinner
        android:id="@+id/admin_creation_regle_liste_ue_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:prompt="@string/admin_choix_ue" />
    
    <Spinner
        android:id="@+id/admin_creation_regle_liste_matieres_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:prompt="@string/admin_choix_matiere" />
    
    <EditText
        android:id="@+id/admin_creation_regle_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="@string/hint_valeur"
        android:inputType="number"
        android:singleLine="true" />
    
</LinearLayout>